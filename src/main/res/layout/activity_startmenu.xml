<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wetland_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartMenuActivity">

    <TextView
        android:id="@+id/chooseMenu_LBL_startGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:padding="3dp"
        android:text="FROGY"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/green_200"
        android:background="@color/brown_200"
        android:textSize="50sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startMenu_BTN_startGame"
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startMenu_BTN_top10"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:textSize="36sp"
        app:backgroundTint="@color/brown_200"
        android:textColor="@color/green_200"
        />

    <Button
        android:id="@+id/startMenu_BTN_top10"
        android:text="TOP 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="270dp"
        android:fontFamily="monospace"
        android:textSize="36sp"
        app:backgroundTint="@color/brown_200"
        android:textColor="@color/green_200"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseGameStyleActivity">

    <ImageView
        android:id="@+id/chooseMenu_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wetland_score"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMenu_BTN_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/green_200"
        android:fontFamily="monospace"
        android:textSize="20sp"
        app:backgroundTint="@color/brown_200"
        app:cornerRadius="45dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/chooseMenu_LBL_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Choose\nPlaying Style"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:padding="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

    <Button
        android:id="@+id/chooseMenu_BTN_ButtonMode"
        android:text="Buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/chooseMenu_BTN_SensorMode"
        android:fontFamily="monospace"
        android:textSize="36sp"
        app:backgroundTint="@color/brown_200"
        android:textColor="@color/green_200"
        />

    <Button
        android:id="@+id/chooseMenu_BTN_SensorMode"
        android:text="Sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="270dp"
        android:fontFamily="monospace"
        android:textSize="36sp"
        app:backgroundTint="@color/brown_200"
        android:textColor="@color/green_200"
        />

</RelativeLayout>
